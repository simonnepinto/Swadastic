<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/featuredRecipesCard1"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/featuredRecipesImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash_bg"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#BCECE4E4"
        app:layout_constraintBottom_toBottomOf="@id/featuredRecipesCard1"
        app:layout_constraintLeft_toLeftOf="@id/featuredRecipesCard1"
        app:layout_constraintRight_toRightOf="@id/featuredRecipesCard1">

        <TextView
            android:id="@+id/featuredRecipesTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dish Name"
            android:padding="5dp"
            android:fontFamily="@font/times_bold"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>