<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/subCategoryCard1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/sub_category_img_dish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_bg"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#43000000"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@id/subCategoryCard1"
        app:layout_constraintLeft_toLeftOf="@id/subCategoryCard1"
        app:layout_constraintRight_toRightOf="@id/subCategoryCard1">

        <TextView
            android:id="@+id/sub_category_title_dish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chicken Biryani"
            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>